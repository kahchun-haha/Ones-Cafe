<%- include('../layouts/admin', { body: ` <div class="whole-page">
  <nav class="sidebar">
    <div class="image-text">
      <span class="image">
        <img src="/images/icons/cafe.png" alt="Dashboard Icon">
      </span>
      <div class="text">Dashboard</div>
    </div>
    <ul id="js-menu-links" class="nav-links"></ul>
  </nav>

  <div class="main">
    <div class="search-section">
      <div class="title-part">Sales Report</div>
      <div class="search-part">
        <input class="search-bar" type="text" placeholder="Search">
        <button class="search-button">
          <i class='bx bx-search'></i>
          <div class="tooltip">Search</div>
        </button>
      </div>
    </div>

    <div class="general-stats">
      <div class="total">
        <div class="title">Total Earnings</div>
        <div class="inner-total">
          <div class="big-part">
            <div class="total-money"> 8451</div>
            <div class="latest-order-money">
              <div class="text">
                <img class="plus-button" src="/images/admin/plus.png" alt="">
                Latest done order: +59
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="total" id="totalOrder">
        <div class="title">Total Orders</div>
        <div class="inner-total">
          <div class="big-part">
            <div class="total-ord accepted">
              <img class="plus-button" src="/images/admin/icons8-arrow-up-40.png" alt="">
              151 accepted
            </div>
            <div class="total-ord declined">
              <img class="plus-button" src="/images/admin/icons8-arrow-down-40.png" alt="">
              12 declined
            </div>
          </div>
        </div>
      </div>
      <div class="total">
        <div class="title-with-image">
          <div class="title">Inventory stock</div>
          <img class="inv-img" src="/images/admin/icons8-inventory-40.png" alt="">
        </div>
        <div class="inner-total">
          <div class="big-part">
            <div class="latest-stock">
              <div class="stock-details" id="inventory-low-stock">
                <!-- Low stock items will be populated here -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="order-history-header">
      <h2>Order History</h2>
      <div class="filter-part">
        <button class="filter-button" data-status="all">All</button>
        <button class="filter-button" data-status="done">Done</button>
        <button class="filter-button" data-status="cancelled">Cancelled</button>
        <button class="filter-button" data-status="pending">Pending</button>
      </div>
    </div>

    <div class="history">
      <div class="main-section table-layout">
        <div class="order-elements">
          <table>
            <thead>
              <th>No</th>
              <th>Order ID</th>
              <th>Item Titles & Quantities</th>
              <th>Total Amount</th>
              <th>Order Status</th>
            </thead>
            <tbody id="order-history-table-body">
              <!-- Orders will be populated here -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  </div>
  ` }) %>